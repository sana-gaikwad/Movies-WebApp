{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
<section class="main">

    <div class ="container">
    <h2>{{ movie.name }}</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ movie.name }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ movie.year }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ movie.rating }}</td>
            </tr>
            <tr>
                <th>MainCast</th>
                <td>{{ movie.mainCast }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>
                {% for movieGenre in movie.genres %}
                    {% if loop.first %}
                         {{ movieGenre.type }}
                    {% else %}
                    {{ "/" }}{{movieGenre.type }}
                    {% endif %}
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
<div class ="list">
        <a href="{{ path('movie_edit', {'id': movie.id}) }}" class="button alt">edit</a>
</div>
    {{ include('movie/_delete_form.html.twig') }}
        <a href="{{ path('movie_index') }}">back to list</a>

    </div>
</section>
{% endblock %}
