{% extends 'base.html.twig' %}

{% block title %}Director{% endblock %}

{% block body %}
<section class="main">

    <div class ="container">
    <h2>{{ director.name }} {{ director.surname }}</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ director.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ director.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ director.surname }}</td>
            <tr>
                <th>Movies ({{ director.movies.count }})</th>
                <td>
                        {% for movie in director.movies %}
                       <li>{{ movie.name }}</li>
                    {% endfor %}
                </td>

            </tr>
        </tbody>
    </table>

  <div class="list">
      <a href="{{ path('director_edit', {'id': director.id}) }}" class="button alt">edit</a>
  </div>


    {{ include('director/_delete_form.html.twig') }}
        <a href="{{ path('director_index') }}">back to list</a>

    </div>
</section>

{% endblock %}
